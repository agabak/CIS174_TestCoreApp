@model  IEnumerable<PersonAccomplishmentViewModel> 

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">City</th>
                    <th scope="col">State</th>
                    <th scope="col"># Accomplishments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var accomplishment in Model)
                {
                    <tr>
                        <th>@accomplishment.FirstName</th>
                        <td>@accomplishment.LastName</td>
                        <td>@accomplishment.City</td>
                        <td>@accomplishment.State</td>
                        <td>@accomplishment.AccomplishmentCount</td>
                        <td>
                            <a asp-action="Detail" asp-controller="Accomplishment" asp-route-id="@accomplishment.PersonId">View</a>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
