@model CreateAccomplishmentViewModel

<div class="container">
    <div>
        <hr />
    </div>
    <h1>Create</h1>
    <form asp-action="CreateAccomplishment" asp-controller="Accomplishment" asp-route-id="@Model.PersonId">
        <div>
            <input asp-for="PersonId" type="hidden" />
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfAccomplishment"></label>
            <input asp-for="DateOfAccomplishment" class="form-control" />
            <span asp-validation-for="DateOfAccomplishment" class="alert-danger"></span>
        </div>

        <a class="btn btn-primary" asp-action="List" asp-controller="Accomplishment">Cancel</a>
        <button type="submit" class="btn btn-success">Save</button>
    </form>
</div>